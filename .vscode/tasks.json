{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Meson Configure",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"command": "meson",
			"args": [
				"--buildtype=debugoptimized",
				"build/"
			]
		},
		{
			"dependsOn": [
				"Meson Configure"
			],
			"label": "Build & Install",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"command": "ninja",
			"args": [
				"install"
			]
		}
	]
}